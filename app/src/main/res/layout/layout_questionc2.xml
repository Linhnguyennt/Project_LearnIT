<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageButton
        android:id="@+id/CloseButton"
        android:layout_width="49dp"
        android:layout_height="56dp"
        android:background="#00FFFFFF"
        android:contentDescription="btn_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close_btn" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306"
        app:srcCompat="@drawable/card_bg" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86"
        app:srcCompat="@drawable/group_118" />

    <ImageButton
        android:id="@+id/ButtonTrue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="#00FFFFFF"
        android:contentDescription="btn_true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16"
        app:layout_constraintVertical_bias="0.278"
        app:srcCompat="@drawable/ddd" />

    <ImageButton
        android:id="@+id/ButtonFalse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:contentDescription="btn_false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toEndOf="@+id/ButtonTrue"
        app:layout_constraintTop_toBottomOf="@+id/imageView16"
        app:layout_constraintVertical_bias="0.278"
        app:srcCompat="@drawable/sss" />

    <TextView
        android:id="@+id/question_truefalse_text"
        android:layout_width="352dp"
        android:layout_height="288dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/baloo_regular"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#8E7AD9"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="@+id/imageView16"
        app:layout_constraintStart_toStartOf="@+id/imageView16"
        tools:text="The question here" />

    <TextView
        android:id="@+id/txt_true"
        android:layout_width="156dp"
        android:layout_height="162dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/baloo_regular"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/ButtonTrue"
        app:layout_constraintEnd_toEndOf="@+id/ButtonTrue"
        app:layout_constraintStart_toStartOf="@+id/ButtonTrue"
        app:layout_constraintTop_toTopOf="@+id/ButtonTrue"
        app:layout_constraintVertical_bias="1.0"
        tools:text="True" />

    <TextView
        android:id="@+id/txt_false"
        android:layout_width="159dp"
        android:layout_height="163dp"
        android:fontFamily="@font/baloo_regular"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/ButtonFalse"
        app:layout_constraintEnd_toEndOf="@+id/ButtonFalse"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ButtonFalse"
        app:layout_constraintTop_toTopOf="@+id/ButtonFalse"
        tools:text="False" />

    <TextView
        android:id="@+id/question_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_regular"
        android:gravity="center"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintEnd_toEndOf="@+id/imageView17"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/imageView17"
        app:layout_constraintVertical_bias="0.404"
        tools:text="CÃ¢u X" />


</androidx.constraintlayout.widget.ConstraintLayout>